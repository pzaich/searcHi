{
	"name": "SearcHi",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Quickly highlight and find search terms",
	"browser_action": {
		"default_icon": "icon.png"
	},
	"background": {
		"scripts": ["storage.js"],
		"background_page": "background.html"
	},
	"permissions": [
		"storage",
		"webNavigation"
	],
	"content_scripts":[ {
		"matches": ["*://*/*"],
		"js": ["jquery.js", "hilite.js"]
	} ]
	// ,
	// "icons" : {
